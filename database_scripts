-- Crear la base de datos
CREATE DATABASE mi_base_de_datos;

-- Seleccionar la base de datos
USE mi_base_de_datos;

-- Crear la tabla tipo_producto
CREATE TABLE tipo_producto (
    codTipo INT AUTO_INCREMENT PRIMARY KEY,
    nombreTipo VARCHAR(100) NOT NULL
);

-- Crear la tabla productos
CREATE TABLE productos (
    CodProducto INT AUTO_INCREMENT PRIMARY KEY,
    descripcion VARCHAR(255) NOT NULL,
    productoComprado BOOLEAN NOT NULL DEFAULT FALSE,
    precioVenta DECIMAL(10, 2) NOT NULL,
    CodTipo INT NULL,
    FOREIGN KEY (CodTipo) REFERENCES tipo_producto(codTipo)
);

